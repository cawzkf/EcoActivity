<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textAparelhoType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tipo"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textAparelhoConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo"
        android:layout_marginEnd="16dp" />

    <!-- Container para alinhar o custo e o bot達o de exclus達o -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textAparelhoCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custo" />

        <!-- Bot達o de exclus達o -->
        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_lixeira"
            android:contentDescription="Excluir"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
