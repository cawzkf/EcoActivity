
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.conta.ContaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail Cadastrado"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="usuario@exemplo.com"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alterar E-mail"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Digite seu novo e-mail"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input"
                        android:padding="12dp"/>

                    <Button
                        android:id="@+id/buttonResetEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/green"
                        android:padding="12dp"
                        android:text="Redefinir E-mail"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senha Cadastrada"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="******"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alterar Senha"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editTextCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Digite sua senha atual"
                        android:inputType="textPassword"
                        android:background="@drawable/input"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Digite sua nova senha"
                        android:inputType="textPassword"
                        android:background="@drawable/input"
                        android:padding="12dp"/>

                    <Button
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alterar Senha"
                        android:background="@color/green"
                        android:layout_marginTop="8dp"
                        android:padding="12dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/buttonResetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/green"
                        android:padding="12dp"
                        android:text="Redefinir Senha"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RelatÃ³rio de consumo via email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/buttonEnviar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enviar"
                        android:background="@color/button_color"
                        android:textColor="@android:color/white"
                        android:padding="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="LOGOUT"
                android:textColor="@android:color/white"
                android:padding="12dp" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>
