<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <!-- BotÃ£o "Selecionar Tudo" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/layoutSelectionControls">

            <Button
                android:id="@+id/buttonSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecionar Tudo"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonDeleteSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluir Selecionados"
                android:backgroundTint="@color/error_red"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAparelhos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


