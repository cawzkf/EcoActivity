<resources>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@drawable/date</item>

        <item name="android:textColorPrimary">@color/green</item>


        <item name="android:textColorSecondary">@color/light_gray</item>


        <item name="android:buttonBarButtonStyle">@style/CustomDatePickerButton</item>
    </style>


    <style name="CustomDatePickerButton">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
</resources>
